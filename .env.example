# ===========================================
# AI-SOC SecOps Agents Platform Configuration
# ===========================================

# Environment
ENVIRONMENT=development
LOG_LEVEL=DEBUG

# ===========================================
# OpenAI API
# ===========================================
OPENAI_API_KEY=your-openai-api-key-here


OPENAI_ORG_ID=  # Optional

# Model Configuration
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# ===========================================
# Neon Postgres Database
# ===========================================
DATABASE_URL=postgresql://user:password@host.neon.tech/ai_soc?sslmode=require

# ===========================================
# Qdrant Vector Database
# ===========================================
QDRANT_URL=https://72bd294e-e8f0-4506-a05e-15649cdb23ed.europe-west3-0.gcp.cloud.qdrant.io
QDRANT_API_KEY=your-qdrant-api-key-here

# ===========================================
# JWT Authentication
# ===========================================
JWT_SECRET_KEY=your-secret-key-min-32-chars-change-in-production
JWT_REFRESH_SECRET_KEY=your-refresh-secret-key-min-32-chars
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ===========================================
# Rate Limiting
# ===========================================
RATE_LIMIT_PER_MINUTE=60
TOKEN_BUDGET_PER_REQUEST=4000
TOKEN_BUDGET_PER_MONTH=1000000

# ===========================================
# Service URLs (for local development)
# ===========================================
FRONTEND_URL=http://localhost:3000
DOCS_URL=http://localhost:3001
CHATBOT_API_URL=http://localhost:8000
RAG_SERVICE_URL=http://localhost:8003
INGESTION_SERVICE_URL=http://localhost:8002
MCP_SERVER_URL=http://localhost:8001

# ===========================================
# Dapr Configuration
# ===========================================
DAPR_HTTP_PORT=3500
DAPR_GRPC_PORT=50001

# ===========================================
# Observability
# ===========================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3002
JAEGER_PORT=16686
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# ===========================================
# Security
# ===========================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
ALLOWED_HOSTS=localhost,127.0.0.1

# ===========================================
# Redis (for rate limiting and caching)
# ===========================================
REDIS_URL=redis://localhost:6379

# ===========================================
# MCP Agent Tokens
# ===========================================
MCP_AGENT_SECRET=your-mcp-agent-secret-change-in-production
